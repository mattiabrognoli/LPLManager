<Window x:Class="LPLManager.Dialog.AddPlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPLManager.Dialog"
        mc:Ignorable="d"
        Title="AddPlaylist" Height="133" Width="367" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox x:Name="cmbPlaylists" Height="20" Width="300" Grid.Row="0" Grid.ColumnSpan="2" FontFamily="Microsoft Sans Serif" Padding="6,3,5,2" SelectionChanged="cmbPlaylists_SelectionChanged"/>
        <Button x:Name="btnOk" Content="Ok" Click="btnOk_Click" Width="50" Height="20" IsEnabled="False" Grid.Row="1" Grid.Column="0" FontFamily="Microsoft Sans Serif"/>
        <Button x:Name="btnCancel" Content="Cancel"  Click="btnCancel_Click" Width="50" Height="20" Grid.Row="1" Grid.Column="1" FontFamily="Microsoft Sans Serif"/>
    </Grid>
</Window>
